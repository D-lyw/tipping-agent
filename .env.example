# Twitter API 凭证
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_USER_ID=your_user_id

# 监控设置
MONITOR_INTERVAL=60000  # 监控间隔，单位毫秒，默认 60 秒
MONITORED_TWEETS=1234567890,0987654321  # 预设监控的推文 ID，逗号分隔

# CKB 生态监控设置
RUN_ECOSYSTEM_MONITOR_IMMEDIATELY=false  # 是否在启动时立即执行一次生态监控
ECOSYSTEM_MONITOR_MORNING_TIME=10  # 每天上午监控时间（小时，24小时制）
ECOSYSTEM_MONITOR_EVENING_TIME=18  # 每天下午监控时间（小时，24小时制）

# Nostr 设置
NOSTR_PRIVATE_KEY=your_nostr_private_key  # Nostr 私钥，如不设置将自动生成
NOSTR_RELAYS=wss://relay.damus.io,wss://relay.nostr.info  # Nostr Relay 服务器，逗号分隔
NOSTR_TEST_PUBLISH=false  # 是否在启动时发布测试笔记

# Nostr 生态监控设置
NOSTR_MIN_QUALITY_THRESHOLD=0.6  # Nostr 内容质量评估阈值

# CKB 节点配置
CKB_NODE_URL=https://mainnet.ckb.dev/rpc  # CKB 节点 RPC 地址
CKB_INDEXER_URL=https://mainnet.ckb.dev/indexer  # CKB Indexer 地址
CKB_PRIVATE_KEY=your_ckb_private_key_for_rewards  # 用于发送打赏的 CKB 私钥

# 打赏设置
MIN_TIPPING_AMOUNT=10  # 最小打赏金额（CKB）
MAX_TIPPING_AMOUNT=1000  # 最大打赏金额（CKB）
DEFAULT_TIPPING_AMOUNT=100  # 默认打赏金额（CKB）

# 日志设置
LOG_LEVEL=info  # 日志级别：debug, info, warn, error 

# Mastra 部署设置
VERCEL_TEAM_ID=your_team_id  # Mastra 团队 ID
MASTRA_PROJECT_NAME=your_project_name  # Mastra 项目名称
MASTRA_VERCEL_TOKEN=your_vercel_token  # Mastra 部署使用的 Vercel 令牌
