{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "test/test-ckb-bot.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
